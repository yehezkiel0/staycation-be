{
  "name": "staycation-backend",
  "version": "1.0.0",
  "description": "Backend API for Staycation application - Express.js with MongoDB",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "seed": "node seedDatabase.js",
    "seed:clean": "node seedDatabase.js --clean",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "health": "curl http://localhost:5000/api/health",
    "docs": "node -e \"console.log('API Documentation: ./API_DOCUMENTATION.md')\""
  },
  "keywords": [
    "staycation",
    "backend",
    "api",
    "express",
    "mongodb",
    "rest-api",
    "nodejs",
    "mongoose",
    "jwt",
    "authentication"
  ],
  "author": "Staycation Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yehezkiel0/staycation-be.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "stripe": "^12.18.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3"
  }
}
